{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "title", "description", "stories"],
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "stories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "description",
          "storyPoint",
          "acceptanceCriteria",
          "testCases"
        ],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "storyPoint": {
            "type": "integer",
            "minimum": 1,
            "maximum": 8
          },
          "acceptanceCriteria": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "testCases": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          }
        }
      }
    }
  }
}